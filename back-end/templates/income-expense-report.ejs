<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Income & Expense Report</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; font-size: 10px; }
        h3 { text-align: center; margin-top: 10px; font-size: 14pt; }
        table { width: 100%; border-collapse: collapse; font-size: 10px; }
        th, td { border: 1px solid #ddd; padding: 2px; font-size: 9px; }
        th { background: #f4f4f4; font-size: 10px; }
        .text-right { text-align: right; }
        .text-center { text-align: center; }
        .text-success { color: green; }
        .text-danger { color: red; }
        .header-container {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }
        .logo-text {
            font-size: 30px;
            font-weight: bold;
            color: darkred;
        }
        .footer {
            text-align: center;
            margin-top: 30px;
            font-size: 16px;
            font-style: italic;
            color: #333;
        }
        .festival-row {
            background: #f9f9f9;
            font-weight: bold;
        }
        .category-row {
            background: #f1f1f1;
            font-style: italic;
        }
        @media print {
            body { font-size: 10pt; }
            h3 { font-size: 14pt; }
            th, td { font-size: 9pt; }
        }
    </style>
</head>
<body>
<!--<div class="header-container">-->
<!--    <img src="<%= imagePath %>" alt="Logo" height="60"/>-->
<!--    <span class="logo-text">Shivam Yuvak Mandal</span>-->
<!--</div>-->
<!--<h3>Festival Income & Expense Report - <%= reportData.year %></h3>-->

<table>
    <thead>
    <tr>
        <th>Title</th>
        <th class="text-right">Income</th>
        <th class="text-right">Expense</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td class="text-right"><strong>Total Income</strong></td>
        <td class="text-right">₹<%= reportData.income.toLocaleString() %></td>
        <td></td>
    </tr>

    <% Object.keys(reportData.expenses).forEach(fest => { %>
        <!-- Festival Header -->
        <tr class="festival-row">
            <td colspan="3"><%= fest %></td>
        </tr>

        <!-- Categories -->
        <% Object.keys(reportData.expenses[fest]).forEach(cat => { %>
            <tr class="category-row">
                <td class="text-center"><%= cat %></td>
                <td></td>
                <td class="text-right"><strong>₹<%= reportData.expenses[fest][cat].total.toLocaleString() %></strong></td>
            </tr>

            <!-- Items -->
            <% reportData.expenses[fest][cat].items.forEach(item => { %>
                <tr>
                    <td class="text-right" style="white-space: pre-line;"><%= item.title %></td>
                    <td></td>
                    <td class="text-right">₹<%= item.amount.toLocaleString() %></td>
                </tr>
            <% }) %>
        <% }) %>

        <!-- Spacer -->
        <tr><td colspan="3"></td></tr>
    <% }) %>

    <!-- Totals -->
    <tr>
        <td class="text-right"><strong>Total</strong></td>
        <td class="text-right"><strong>₹<%= reportData.income.toLocaleString() %></strong></td>
        <td class="text-right"><strong>₹<%= reportData.totalExpense.toLocaleString() %></strong></td>
    </tr>

    <!-- Balance -->
    <tr>
        <td class="text-right"><strong>Balance</strong></td>
        <td></td>
        <td class="text-right <%= reportData.balance >= 0 ? 'text-success' : 'text-danger' %>">
            <strong>₹<%= reportData.balance.toLocaleString() %></strong>
        </td>
    </tr>
    </tbody>
</table>

<div class="footer">
    Thank you for your generous contribution and valuable support towards our festival
</div>
</body>
</html>
